{
    "app-id" : "org.gnome.dataviewer",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "dataviewer",
    "tags" : [
        "nightly"
    ],
    "desktop-file-name-prefix" : "(Nightly) ",
    "finish-args" : [
        "--require-version=0.10.0",
        "--allow=devel",
        "--talk-name=org.freedesktop.Flatpak",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=host",
        "--share=network",
        "--talk-name=org.gtk.vfs.*",
        "--system-talk-name=org.freedesktop.PolicyKit1",
        "--system-talk-name=org.gnome.Sysprof2",
        "--talk-name=org.gnome.CodeAssist.v1.*",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--system-talk-name=org.freedesktop.Avahi",
        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.gnome.SettingsDaemon.Color",
        "--talk-name=org.freedesktop.PackageKit",
        "--talk-name=org.freedesktop.secrets",
        "--filesystem=xdg-run/keyring",
        "--filesystem=~/.local/share/flatpak",
        "--filesystem=xdg-data/meson",
        "--filesystem=/var/lib/flatpak",
        "--env=G_SLICE=always-malloc"
    ],
    "x-run-args" : [
    ],
    "build-options" : {
        "env" : {
            "V" : "1",
            "NO_AT_BRIDGE" : "1",
            "BASH_COMPLETIONSDIR" : "/app/share/bash-completion/completions",
            "MOUNT_FUSE_PATH" : "../tmp/",
            "PKG_CONFIG_PATH" : "/app/lib/pkgconfig:/app/share/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig:/app/lib/gnome-builder/pkgconfig/"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "/share/bash-completions",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "gtksourceview",
            "sources" : [
                {
                    "type" : "git",
                    "url"
                    : "https://gitlab.gnome.org/GNOME/gtksourceview.git"
                }
            ]
        },
        {
            "name" : "DataViewer",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
                "--libdir=/app/lib",
                "--buildtype=debugoptimized",
                "-Dctags_path=/app/bin/ctags"
            ],
            "sources" : [
                {
                    "disable-shallow-clone" : true,
                    "type" : "git",
                    "path" : "/home/emanuel_schmidt/Dokumente/Sourcecode/gdv"
                }
            ]
        }
    ]
}